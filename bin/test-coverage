#!/usr/bin/env bash

echo "require \"./spec/**\"" > run_tests.cr
ls
docker run --rm -it --security-opt seccomp=unconfined -v $(pwd):/app hanneskaeufler/crystal-kcov:latest \
    /bin/bash -c "cd /app && echo 'require \"./spec/**\"' > run_tests.cr && ls && crystal build --debug run_tests.cr -D skip-integration && ls && kcov --clean --include-path=/app/src/ /app/coverage ./run_tests"
