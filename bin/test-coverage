#!/usr/bin/env bash

echo "require \"./spec/**\"" > run_tests.cr
docker create -v /app --name runner hanneskaeufler/crystal-kcov:latest /bin/true
docker cp $(pwd) runner:/app
docker run \
    -w /app/project \
    --rm \
    --security-opt seccomp=unconfined \
    --volumes-from runner \
    --coveralls-id="$COVERALLS_REPO_TOKEN"
    hanneskaeufler/crystal-kcov:latest \
    /bin/bash -c "crystal build run_tests.cr -D skip-integration && kcov --clean --include-path=/app/project/src /coverage ./run_tests"
